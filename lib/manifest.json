{
  "manifest_version": 2,
  "name": "KAF to Wunderlist",
  "version": "0.0.1",

  "description": "Export a KAF recipe to Wunderlist.",
  "author": "Dana Silver",

  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon48.png"
  },

  "content_scripts": [
    {
      "matches": ["http://www.kingarthurflour.com/recipes/*"],
      "js": [
        "vendor/jquery-3.0.0.js",
        "content_script.js"
      ],
      "css": [
        "content_styles.css"
      ]
    }
  ],

  "permissions": [
    "identity",
    "storage",
    "https://www.wunderlist.com/*",
    "https://a.wunderlist.com/api/*"
  ],

  "web_accessible_resources": [
    "img/*.png"
  ],

  "options_page": "options.html"
}
